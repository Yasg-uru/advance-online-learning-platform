{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types/express/index.d.ts"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
, "src/types/express"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
